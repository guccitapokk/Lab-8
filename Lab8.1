import cv2
import sys
import numpy as np

# Укажите имя файла изображения
image_filename = "variant-1.jpg"

img = cv2.imread(image_filename)

gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

if img is None:
    sys.exit("Could not read the image.")

cv2.imshow("Display window", gray)
k = cv2.waitKey(0)

# Сохранение изображения при нажатии 's'
if k == ord("s"):
    cv2.imwrite("saved_image.png", img)

